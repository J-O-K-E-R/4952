@model _4952.Models.FileViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="sidebar">
    <form class="search">
        <div class="row">
            <div class="col-md-7" id="search-bar">
                <input type="text" class="form-control" placeholder="Search" />
            </div>
            <button class="btn btn-warning"> Search </button>
        </div>
    </form>
    <br />
    <div>
        @Html.TextBoxFor(x => x.filePosted, new { type = "file" })
        @Html.ValidationMessageFor(x => x.filePosted)
    </div>
    <br /><br />
    <button type="submit" class="btn btn-success btn-lg">Upload</button>
    <br /><br />
    <div class="fileinfo">
        file info 1 <br />
    </div>

    <div class="logout">
        <button class="btn btn-warning"> Logout </button>
    </div>


</div>

<div class="content">
    @using (Html.BeginForm("FileSelected", "Home", FormMethod.Post, new { form = "files" }))
    {
        <div>
            <input type="submit" class="btn btn-warning" name="submitButton" value="Download" form="files" />
            <input type="submit" class="btn btn-warning" name="submitButton" value="Delete" form="files" />
            <button class="btn btn-warning">Create Folder</button>
            <button class="btn btn-warning">Move To</button>
        </div>
        <br />
        <div class="fileContainer">
            @foreach (_4952.Models.FileMetadata f in Model.fileMetadataList)
                {
                @Html.Partial("fileBox", f)
            }
        </div>
    }
</div>